<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.diaz.inaki.practica3_contactos.VerContactoActivity">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/photo"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textoNombreVerContacto"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="TextView"
        tools:textSize="22sp"
        android:layout_alignBottom="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textoNombre"
        android:layout_alignTop="@+id/textoNombre"
        android:layout_toEndOf="@+id/textoNombre"
        android:text=",,," />

    <CheckBox
        android:id="@+id/checkBoxVerContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/photo"
        android:layout_toEndOf="@+id/editText"
        android:text="¿Enviar SMS?" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/photo"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Teléfono:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textoTelefonoVerContacto"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/photo"
        android:layout_toEndOf="@+id/editText2"
        android:text="TextView"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textoTelefonoVerContacto"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Fecha de nacimiento:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textoTelefonoVerContacto"
        android:layout_toEndOf="@+id/editText3"
        android:text="TextView"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Mensaje:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:maxLines="4"
        android:lines="4"
        android:layout_below="@+id/editText4"
        android:text="TextView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Guardar" />
</RelativeLayout>