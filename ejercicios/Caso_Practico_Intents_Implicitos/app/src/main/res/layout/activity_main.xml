<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.diaz.inaki.caso_practico_intents_implicitos.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/edLatitud"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/edLongitud"
        android:hint="-2.6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="http://www.google.es"
        android:ems="10"
        android:id="@+id/edURL"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/edEmail"
        android:hint="egibide@egibide.org"
        android:layout_below="@+id/edLongitud"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnWeb"
        android:onClick="abrir"/>

    <Button
        android:text="Mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edLongitud"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/btnMapa"
        android:onClick="abrir"/>

    <Button
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEnviar"
        android:layout_alignTop="@+id/edEmail"
        android:layout_alignParentEnd="true"
        android:onClick="abrir"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edLatitud"
        android:hint="42.84"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/btnWeb"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/btnEnviar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/edRecibido"
        android:layout_alignParentEnd="true"
        android:hint="texto recibido"
        />

    <Button
        android:text="Cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edRecibido"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/btnCam"
        android:onClick="abrir"/>
</RelativeLayout>
